{
  "name": "mockman",
  "displayName": "MockMan",
  "description": "ðŸš€ MockMan is a lightweight Fake Database-as-a-Service that helps developers, students, and teams create and manage mock APIs directly inside Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "MockMan",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mockmanCollections",
    "onCommand:mockman.login",
    "onCommand:mockman.refresh",
    "onCommand:mockman.templates",
    "onUri:MockMan.mockman"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mockman",
          "title": "MockMan",
          "icon": "media/mockman.svg"
        }
      ]
    },
    "views": {
      "mockman": [
        {
          "id": "mockmanCollections",
          "name": "Collections",
          "type": "tree",
          "contextualTitle": "Collections",
          "when": "config.mockman.apiKey"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "MockMan Settings",
      "properties": {
        "mockman.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your MockMan API Key"
        }
      }
    },
    "commands": [
      {
        "command": "mockman.login",
        "title": "MockMan: Login",
        "icon": "$(sign-in)"
      },
      {
        "command": "mockman.refresh",
        "title": "MockMan: Refresh Collections",
        "icon": "$(refresh)"
      },
      {
        "command": "mockman.templates",
        "title": "MockMan: Browse Templates",
        "icon": "$(library)"
      },
      {
        "command": "mockman.showEndpoints",
        "title": "MockMan: Show Endpoints",
        "icon": "$(globe)"
      }
    ],
    "viewsWelcome": [
      {
        "view": "mockmanCollections",
        "contents": "Please login to view your MockMan collections.\n[Login](command:mockman.login)"
      }
    ],
    "view/title": [
      {
        "command": "mockman.login",
        "when": "view == mockmanCollections && !config.mockman.apiKey",
        "group": "navigation@1"
      },
      {
        "command": "mockman.refresh",
        "when": "view == mockmanCollections && config.mockman.apiKey",
        "group": "navigation@2"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "mockman.showEndpoints",
          "when": "view == mockmanCollections && viewItem == collection",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "mockman.templates",
          "when": "view == mockmanCollections && config.mockman.apiKey",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build": "node ./esbuild.js"
  },
  "dependencies": {
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.32.0"
  }
}